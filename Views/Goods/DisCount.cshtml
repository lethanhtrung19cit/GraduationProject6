            }, "slow");
        }
        function rightclickDinning() {
            event.preventDefault();
            $('#Dinning').animate({
                scrollLeft: "+=400px"
            }, "slow");
        }
        function leftclickBed() {
            event.preventDefault();
            $('#Bed').animate({
