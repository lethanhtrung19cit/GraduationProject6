                        <tr style="font-size:20px">
                            <th>Mã hàng</th>
                            <th>Tên hàng</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Tổng tiền</th>

                        </tr>

                        @foreach (var a in listDelivering)
                        {

                            float sum = a.detailCartModel.Amount * a.goodsModel.Price;

                            <tr>
                                <td>@a.detailCartModel.IdDeCart</td>
                                <td>@a.goodsModel.NameGoods</td>
